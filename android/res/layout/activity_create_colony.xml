<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Yard:"
        android:id="@+id/text_view_yard"
        android:layout_alignBottom="@+id/bt_change_yard"
        android:layout_toLeftOf="@+id/bt_change_yard"
        android:layout_marginBottom="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_change_yard"
        android:layout_gravity="center"
        android:text="yard"
        android:width="200dp"
        android:height="60dp"
        android:layout_below="@+id/iV_NFC_icon"
        android:layout_toLeftOf="@id/iV_NFC_icon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_set_create_date"
        android:layout_gravity="center"
        android:height="60dp"
        android:width="200dp"
        android:text="Click to set date"
        android:onClick="CreateDateClicked"
        android:layout_below="@+id/bt_change_yard"
        android:layout_alignRight="@id/bt_change_yard" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_colony_name"
        android:layout_gravity="center"
        android:text="name"
        android:width="200dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/bt_set_create_date"
        android:layout_alignLeft="@id/bt_set_create_date"
        android:layout_alignRight="@id/bt_change_yard"
        android:height="60dp"
        android:textAlignment="center"
        android:paddingStart="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_change_source_type"
        android:layout_gravity="center"
        android:text="From a"
        android:onClick="Button_FromA_Clicked"
        android:width="200dp"
        android:height="60dp"
        android:layout_below="@+id/bt_change_source"
        android:layout_alignRight="@id/bt_change_yard"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_change_source"
        android:layout_gravity="center"
        android:text="source"
        android:width="200dp"
        android:height="60dp"
        android:layout_below="@id/et_colony_name"
        android:layout_alignRight="@id/bt_change_yard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_change_hived_in_type"
        android:layout_gravity="center"
        android:width="200dp"
        android:text="hived in"
        android:height="60dp"
        android:layout_below="@+id/bt_change_source_type"
        android:layout_alignRight="@id/bt_change_yard"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name:"
        android:id="@+id/text_view_name"
        android:layout_alignBottom="@id/et_colony_name"
        android:layout_toLeftOf="@+id/et_colony_name"
        android:layout_marginBottom="15dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Created:"
        android:id="@+id/text_view_created"
        android:layout_alignBottom="@+id/bt_set_create_date"
        android:layout_toLeftOf="@+id/bt_set_create_date"
        android:layout_marginBottom="15dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="From a:"
        android:id="@+id/text_view_from"
        android:layout_alignBottom="@+id/bt_change_source_type"
        android:layout_toLeftOf="@+id/bt_change_source_type"
        android:layout_marginBottom="15dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Source:"
        android:id="@+id/text_view_source"
        android:layout_alignBottom="@+id/bt_change_source"
        android:layout_toLeftOf="@+id/bt_change_source"
        android:layout_marginBottom="15dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hived in:"
        android:id="@+id/text_view_hive"
        android:layout_alignBottom="@+id/bt_change_hived_in_type"
        android:layout_toLeftOf="@+id/bt_change_hived_in_type"
        android:layout_marginBottom="15dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Colony"
        android:id="@+id/button_create"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="CreateButton"
        android:width="150dp"
        android:height="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Scan an NFC tag"
        android:id="@+id/tv_nfc_text"
        android:layout_marginRight="10dp"
        android:textColor="#800000"
        android:layout_above="@+id/button_create"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_colony_note"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button_create"
        android:text="note"
        android:layout_below="@+id/bt_change_hived_in_type" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iV_NFC_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/nfc_icon" />


</RelativeLayout>