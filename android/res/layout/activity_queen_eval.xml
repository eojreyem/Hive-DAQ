<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent" android:layout_height="match_parent">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Queen Number"
        android:id="@+id/bt_queen_number"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:onClick="QueenDetails"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Seen"
        android:textOff="Seen"
        android:id="@+id/toggle_seen"
        android:width="110dp"
        android:height="65dp"
        android:onClick="QueenSeen"
        android:layout_below="@+id/text_view_is"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Seen"
        android:id="@+id/bt_not_seen"
        android:width="110dp"
        android:height="65dp"
        android:layout_below="@+id/toggle_seen"
        android:layout_alignLeft="@+id/toggle_seen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Found"
        android:id="@+id/bt_not_found"
        android:width="110dp"
        android:height="65dp"
        android:layout_below="@+id/bt_not_seen"
        android:layout_alignLeft="@+id/bt_not_seen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gone"
        android:id="@+id/bt_gone"
        android:width="110dp"
        android:height="65dp"
        android:layout_below="@+id/bt_not_found"
        android:layout_alignLeft="@+id/bt_not_found" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="110dp"
        android:height="65dp"
        android:text="Different Queen"
        android:onClick="CreateQueen"
        android:id="@+id/bt_new_queen_seen"
        android:layout_below="@+id/bt_gone"
        android:layout_alignLeft="@+id/bt_gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IS"
        android:layout_marginLeft="40dp"
        android:id="@+id/text_view_is"
        android:layout_below="@+id/bt_queen_number"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Queen Cells"
        android:id="@+id/bt_queen_cells"
        android:width="110dp"
        android:height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laying Workers"
        android:width="110dp"
        android:height="65dp"
        android:id="@+id/bt_laying_workers"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/bt_queen_cells" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce"
        android:width="110dp"
        android:height="65dp"
        android:id="@+id/bt_introduce"
        android:layout_below="@+id/bt_sell_queen"
        android:layout_toRightOf="@+id/bt_gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note"
        android:id="@+id/button_note"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="Take_note"
        android:width="100dp"
        android:height="70dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confine"
        android:id="@+id/bt_confine"
        android:width="110dp"
        android:height="65dp"
        android:visibility="invisible"
        android:layout_below="@id/text_view_is"
        android:layout_toRightOf="@+id/toggle_seen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move"
        android:width="110dp"
        android:height="65dp"
        android:visibility="invisible"
        android:id="@+id/bt_move_queen"
        android:layout_below="@+id/bt_confine"
        android:layout_toRightOf="@+id/toggle_seen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kill"
        android:visibility="invisible"
        android:width="110dp"
        android:height="65dp"
        android:id="@+id/bt_kill_queen"
        android:layout_below="@+id/bt_move_queen"
        android:layout_toRightOf="@+id/bt_not_seen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sell"
        android:visibility="invisible"
        android:width="110dp"
        android:height="65dp"
        android:id="@+id/bt_sell_queen"
        android:layout_below="@+id/bt_kill_queen"
        android:layout_toRightOf="@+id/bt_not_found" />

</RelativeLayout>