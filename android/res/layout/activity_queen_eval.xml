<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Queen Number"
        android:id="@+id/bt_queen_number"
        android:onClick="QueenDetails"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IS"
        android:id="@+id/text_view_is"
        android:layout_alignBottom="@+id/bt_queen_number"
        android:layout_toRightOf="@+id/bt_queen_number" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/bt_queen_number">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Seen"
            android:textOff="Seen"
            android:id="@+id/t_seen"
            android:layout_column="0"
            android:layout_row="0"
            android:height="70dp"
            android:width="110dp"
            android:onClick="QueenSeen"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Gone"
            android:textOn="Gone"
            android:id="@+id/t_gone"
            android:onClick="QueenGone"
            android:layout_column="1"
            android:layout_row="0"
            android:height="70dp"
            android:width="110dp" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Not Seen/ Not Found"
            android:textOn="Not Seen/ Not Found"
            android:onClick="QueenNotSeenFound"
            android:id="@+id/t_not_seen_found"
            android:layout_column="2"
            android:layout_row="0"
            android:height="70dp"
            android:width="110dp" />


        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Remove"
            android:textOn="Remove"
            android:onClick="Remove"
            android:layout_column="0"
            android:layout_row="1"
            android:height="70dp"
            android:width="110dp"
            android:id="@+id/t_remove_queen" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Found"
            android:id="@+id/bt_not_found"
            android:layout_row="1"
            android:layout_column="2"
            android:width="110dp"
            android:height="70dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Seen"
            android:id="@+id/bt_not_seen"
            android:layout_row="1"
            android:layout_column="1"
            android:width="110dp"
            android:height="70dp" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Introduce"
            android:textOn="Introduce"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="Introduce"
            android:height="70dp"
            android:width="110dp"
            android:id="@+id/t_introduce" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confine"
            android:id="@+id/bt_confine"
            android:layout_row="1"
            android:layout_column="1"
            android:width="110dp"
            android:height="70dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Queen"
            android:layout_column="2"
            android:layout_row="2"
            android:height="70dp"
            android:width="110dp"
            android:onClick="CreateQueen"
            android:id="@+id/bt_create_queen" />


        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Queen Cells"
            android:id="@+id/t_queen_cells"
            android:height="70dp"
            android:width="110dp"
            android:onClick="QcellsSeen"
            android:layout_row="3"
            android:layout_column="0"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Culled"
            android:id="@+id/t_culled"
            android:height="70dp"
            android:width="110dp"
            android:layout_row="3"
            android:layout_column="1"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Emerged/ Virgins"
            android:id="@+id/t_emerged"
            android:height="70dp"
            android:width="110dp"
            android:layout_row="3"
            android:layout_column="2"/>





        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kill"
            android:id="@+id/bt_kill"
            android:height="70dp"
            android:width="110dp"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell"
            android:id="@+id/bt_sell"
            android:height="70dp"
            android:width="110dp"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move"
            android:id="@+id/bt_move"
            android:height="70dp"
            android:width="110dp"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laying Workers"
            android:id="@+id/bt_laying_workers"
            android:height="70dp"
            android:width="110dp"
            android:layout_row="1"
            android:layout_column="0" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Queen Right"
            android:textOn="Queen Right"
            android:onClick="QueenRight"
            android:id="@+id/t_queen_right"
            android:height="70dp"
            android:width="110dp"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Existing"
            android:id="@+id/bt_existing"
            android:height="70dp"
            android:width="110dp"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Seen"
            android:id="@+id/bt_not_seen2"
            android:layout_column="0"
            android:layout_row="2"
            android:height="70dp"
            android:width="110dp" />



    </GridLayout>

<!--










        -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note"
        android:id="@+id/button_note"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="Take_note"
        android:width="100dp"
        android:height="70dp"/>

</RelativeLayout>