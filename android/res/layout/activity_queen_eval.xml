<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/text_colony_type_number"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="Hive 203"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/bt_queen_details"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="Queen # Details" />

    <TextView
        android:id="@+id/text_last_status"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:layout_row="1"
        android:text="Last Status:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <!-- Column 1, Actions -->

    <TextView
        android:id="@+id/text_queen_actions"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="Actions"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/bt_move"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="Move" />

    <!-- Column 2, Unseen -->

    <TextView
        android:id="@+id/text_queen_unseen"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="Unseen"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/bt_queenless"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="Queenless" />

    <!-- Column 3, Seen -->

    <TextView
        android:id="@+id/text_queen_seen"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="Seen"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/bt_unmarked"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="Unmarked" />



    <Button
        android:id="@+id/bt_kill"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:text="Kill" />

    <Button
        android:id="@+id/bt_queen_not_found"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:text="Not Found" />

    <Button
        android:id="@+id/bt_virgins"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:text="Virgin(s)" />

    <Button
        android:id="@+id/bt_confine"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:text="Confine" />

    <Button
        android:id="@+id/bt_laying_workers"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="5"
        android:text="Laying Workers" />

    <Button
        android:id="@+id/bt_drone_layer"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:layout_row="5"
        android:text="Drone Layer" />

    <Button
        android:id="@+id/bt_mark"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="Mark" />

    <Button
        android:id="@+id/bt_queenright"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="Queen-Right" />

    <Button
        android:id="@+id/bt_marked"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="Marked" />

    <TextView
        android:id="@+id/text_introduce"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="7"
        android:text="Introduce"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/bt_existing_queen"
        android:layout_width="130dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="8"
        android:text="Existing Queen" />

    <Button
        android:id="@+id/bt_new_queen"
        android:layout_width="130dp"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="8"
        android:text="New Queen" />

    <Button
        android:id="@+id/bt_note"
        android:layout_width="130dp"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="9"
        android:text="Note" />

</GridLayout>