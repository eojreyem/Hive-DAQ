<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Evaluation" >

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:columnCount="3" >

        <TextView
            android:id="@+id/text_frames_of_bees"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_row="0"
            android:text="F.O.Bees:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edit_text_fobees"
            android:layout_width="80dp"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="0"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/text_frames_of_brood"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_row="1"
            android:text="F.O.Brood:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edit_text_fobrood"
            android:layout_width="80dp"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="1"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/text_colony_weight"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_row="2"
            android:text="Weight:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edit_text_colony_weight"
            android:layout_width="80dp"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="2"
            android:ems="10"
            android:inputType="number" />

        <ToggleButton
            android:id="@+id/toggle_eggs"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="4"
            android:textOff="Eggs" />

        <ToggleButton
            android:id="@+id/toggle_larvae"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="4"
            android:textOff="Larvae" />

        <ToggleButton
            android:id="@+id/toggle_pupae"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="4"
            android:textOff="Pupae" />

        <Button
            android:id="@+id/bt_disease_menu"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="5"
            android:onClick="Disease"
            android:text="Disease"/>

        <Button
            android:id="@+id/bt_queen_menu"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="5"
            android:onClick="Queen_menu"
            android:text="Queen" />


        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="3"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/text_brood_pattern"
            android:layout_width="80dp"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_row="3"
            android:text="Brood Pattern"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </GridLayout>

</RelativeLayout>